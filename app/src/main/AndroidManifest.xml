<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ait.kim.pantryrescue">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/salad"
        android:label="@string/app_name"
        android:roundIcon="@drawable/salad"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecipeNamesActivity" />
        <activity
            android:name=".RecipeDetailsActivity"
            android:label="@string/title_activity_recipe_details"
            android:theme="@style/AppTheme" />
        <activity android:name=".MainActivity" />
        <activity android:name=".PostsActivity"></activity>
        <activity android:name=".CreatePostActivity"></activity>

    </application>

</manifest>